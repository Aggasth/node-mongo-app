pipeline {
  agent {
    docker { image 'ubuntu:latest' }
  }
  tools {
    nodejs 'nodejs'
  }
  stages{
    stage('CheckOut') {
      steps {
        git branch: 'main', credentialsId: '108da089-e7b0-4bdf-9770-e6f1471e9d34', url: 'https://github.com/Aggasth/node-mongo.git'
      }
    }

    stage('Dependencies') {
      steps {
        script{
          // dependencias ubuntu
          sh 'apt update'
          sh 'apt install nodejs'
          sh 'node -v'
          sh 'apt install npm'
          // dependencias app
          sh 'npm init -y'
          sh 'npm install express ejs mongoose'
        }
      }
    }

    stage('Run App') {
      steps {
        sh 'node app.js'
      }
    }
  }
}
